<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="shoppingList.Views.CategoryView"
             xmlns:ViewModels="clr-namespace:shoppingList.ViewModels"
             xmlns:Views="clr-namespace:shoppingList.Views"
             x:DataType="ViewModels:CategoryViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <VerticalStackLayout MinimumWidthRequest="200" BackgroundColor="#232323" >
        <FlexLayout Direction="Row" JustifyContent="SpaceBetween" Padding="10">
            <FlexLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ToggleItemsVisibility}" NumberOfTapsRequired="1" />
            </FlexLayout.GestureRecognizers>

            <Button Text="ðŸš«" Command="{Binding DeleteCategory}" Background="Transparent"></Button>
            <Label FontSize="20"  Text="{Binding Name}" ></Label>
            <Button Text="+" Command="{Binding OpenNewItem}"></Button>
        </FlexLayout>
        <CollectionView x:Name="itemsCollection"
                ItemsSource="{Binding Items}"
                Margin="10"
                IsVisible="{Binding ItemsVisible}"
                ItemSizingStrategy="MeasureAllItems">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"></LinearItemsLayout>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Views:Item></Views:Item>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>

</ContentView>
